{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./node_modules/*"
  ],
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "lib": ["es2015"]
}